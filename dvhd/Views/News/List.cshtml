@model PagedList.IPagedList<dvhd.Models.News>
@using PagedList.Mvc; 
@{
    ViewBag.Title = "Danh sách tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var news = "";
    var link = "";
}
<div class="container">
  <div class="row"> 
    <!-- Blog -->
    <section class="blog mt50">
      <div class="col-md-12">
         @foreach (var item in Model) {
             link = "/News/Details/"+ item.id;
             ///hotel/" + Config.unicodeToNoMark(prs[j].name) + "-" + ViewBag.fromdate + "-" + ViewBag.todate + "-" + prs[j].id + "
             news += "<div class=\"col-sm-4 single\" style=\"height:auto;\">";
             news += " <div ><a href=\"" + link + "\"><img src=\"" + item.image + "\" alt=\"" + item.title + "\"  style=\"width:250px;height:200px;\"/></a>";
             news += "  <div class=\"mask\">";
             news += "   <div class=\"main\">";
             news += "      <a href=\"" + link + "\"><b>" + item.title + "</b></a>";
             news += "      <p>" + item.des + "</p>";
             news += "    </div>";
             news += " </div>";
             news += " </div>";
             news += " </div>";
         }    
         @Html.Raw(@news)  
      </div>
      @if (Model.PageCount>1){
                <div class="col-md-9" style="float:right;">
                <ul class="pagination clearfix">
                        <li class="disabled"><a href="#">«</a></li>
                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            if (i != ViewBag.page){
                               <text><li><a href="/News/List?page=@i">@i</a></li></text>
                            }else{
                               <text><li><a href="/News/List?page=@i" style="background-color:#8a6d3b;">@i</a></li></text>
                            }
                        }
                </ul>
                </div>
            } 
    </section>
   </div>
</div>
