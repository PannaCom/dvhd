@model PagedList.IPagedList<dvhd.Models.user>
@using PagedList.Mvc; 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style id="styleDetail" type="text/css">
   /* Ban In css*/
    .tbBanIn {
        width:100%;
        border: 1px solid #bbbcbb;
        border-collapse: collapse;
    }
    .tbBanIn td, .tbBanIn th {
        border: 1px solid #bbbcbb;
        padding: 2px !important;
    }
    .tbBanIn label {
        margin: 0 !important;
    }
</style>
<h2>Danh sách user quản trị</h2>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>

<table class="tbBanIn">
    <tr>
        <th>
            Tên user
        </th>
        <th>
            Đơn vị
        </th>  
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.name
        </td>
        <td width="20%">
            @item.groups
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
@if (Model.PageCount>1){
    <div class="col-md-12">
    <ul class="pagination clearfix">
            <li class="disabled"><a href="#">«</a></li>
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i != ViewBag.page){
                   <text><li><a href="/hoso/Index?page=@i">@i</a></li></text>
                }else{
                   <text><li><a href="/hoso/Index?page=@i" style="background-color:#ddd ;">@i</a></li></text>
                }
            }
    </ul>
    </div>
}
